<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/restaurants/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                        <div class="input-group-append">
                            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- dropdown box -->
<div class="dropdown container mt-5 row justify-content-end" style="margin: auto; width: 50%">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            排序
    </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item {{#if sortRecord.aToZ}}active{{/if}}" href="/sort/A-Z">A->Z</a>
        <a class="dropdown-item {{#if sortRecord.zToA}}active{{/if}}" href="/sort/Z-A">Z->A</a>
        <a class="dropdown-item {{#if sortRecord.category}}active{{/if}}" href="/sort/category">類別</a>
        <a class="dropdown-item {{#if sortRecord.location}}active{{/if}}" href="/sort/location">地區</a>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                {{#each restaurant}}
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" style="width: 100%">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                            <form class="deleteBtn" action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline">
                                <a href="/restaurants/{{this._id}}/edit">
                                    <button type="button" class="btn btn-info">edit</button>
                                </a>
                                <button type="button submit" class="btn btn-info">delete</button>
                            </form>
                            
                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>